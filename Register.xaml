<Window x:Class="wpfwdb.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfwdb"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UserTxtbox" HorizontalAlignment="Left" Margin="356,65,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordTxtbox" HorizontalAlignment="Left" Margin="356,117,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ConfirmPassTxtbox" HorizontalAlignment="Left" Margin="356,185,0,0" TextWrapping="Wrap" Text="ConfirmPassword" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="EmailTxtbox" HorizontalAlignment="Left" Margin="356,249,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="RegisterBtn" Content="Register" HorizontalAlignment="Left" Margin="356,300,0,0" VerticalAlignment="Top" Height="35" Width="120" Click="RegisterBtn_Click"/>
        <Button x:Name="BackBtn" Content="Back" HorizontalAlignment="Left" Margin="356,340,0,0" VerticalAlignment="Top" Height="28" Width="120" Click="BackBtn_Click"/>

    </Grid>
</Window>
